<h1 style="color: #5A9BD5; font-weight: bold; text-align: center; margin-bottom: 30px;">
    {{ title }}
</h1>

<!-- Tabla de beneficios de afiliados -->
<table style="margin: 0 auto 40px auto; border-collapse: collapse; width: 80%; max-width: 100%;">
    <thead>
        <tr>
            <th colspan="3" style="background-color: #5A9BD5; color: white; padding: 10px; font-size: 18px;">
                Beneficios de ser afiliado
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td style="text-align: center; padding: 20px; border: 1px solid #ccc; word-wrap: break-word;">
                <img src="images/benefits/mount.png" alt="Mountura exclusiva" style="width: 64px; height: 64px;"><br>
                <strong>Mountura exclusiva</strong>
            </td>
            <td style="text-align: center; padding: 20px; border: 1px solid #ccc; word-wrap: break-word;">
                <img src="images/benefits/twitch-item.png" alt="Item de Twitch exclusivo" style="width: 64px; height: 64px;"><br>
                <strong>Ítem de Twitch exclusivo</strong>
            </td>
            <td style="text-align: center; padding: 20px; border: 1px solid #ccc; word-wrap: break-word;">
                <img src="images/benefits/backpack.png" alt="Backpack exclusiva" style="width: 64px; height: 64px;"><br>
                <strong>Backpack exclusiva</strong>
            </td>
        </tr>
    </tbody>
</table>

<!-- Lista de streamers -->
<div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 30px; max-width: 100%; margin: 0 auto;">
    {% for streamer in streamers %}
        <div style="
            flex: 1 1 280px; /* flexible, mínimo 280px */
            max-width: 320px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            word-wrap: break-word;
        ">
            {% if streamer.image %}
                <img src="{{ streamer.image }}" alt="{{ streamer.name }}" style="width: 100%; max-height: 160px; object-fit: cover; border-radius: 8px;">
            {% endif %}

            <h2 style="margin: 10px 0 5px 0; color: #3B5998; word-wrap: break-word;">
                {{ streamer.name }}
                {% if streamer.platform == 'twitch' %}
                    <img src="images/twitch-icon.png" alt="Twitch" style="width: 18px; vertical-align: middle;">
                {% elseif streamer.platform == 'youtube' %}
                    <img src="images/youtube-icon.png" alt="YouTube" style="width: 18px; vertical-align: middle;">
                {% endif %}
            </h2>

            {% if streamer.flag_image %}
                <img src="{{ streamer.flag_image }}" alt="Bandera" style="width: 24px; margin-bottom: 5px;">
            {% endif %}

            <p style="font-size: 14px; word-wrap: break-word;">{{ streamer.description }}</p>

            <a href="{{ streamer.url }}" target="_blank" style="
                display: inline-block;
                margin-top: 8px;
                padding: 6px 12px;
                background-color: #5A9BD5;
                color: white;
                text-decoration: none;
                border-radius: 5px;
                word-wrap: break-word;
                max-width: 100%;
                box-sizing: border-box;
                overflow-wrap: break-word;
            ">
                Visitar canal
            </a>
        </div>
    {% else %}
        <p style="text-align: center;">No hay streamers afiliados activos.</p>
    {% endfor %}
</div>

<!-- Media queries para dispositivos pequeños -->
<style>
    @media (max-width: 600px) {
        table {
            width: 100% !important;
        }
        table td {
            display: block;
            width: 100% !important;
            box-sizing: border-box;
        }
        div[style*="flex: 1 1 280px"] {
            flex: 1 1 100% !important;
            max-width: 100% !important;
        }
    }
</style>

